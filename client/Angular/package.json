{
  "name": "automationtoolkit2",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.config.json",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "api-publish": "cd ../server/AutomationToolkit.Api && dotnet publish -c release -r win-x64 --output ../../dist/win",
    "build-electron": "ng build --base-href ./ && copy src\\electron\\* dist && xcopy /e ..\\dist\\win\\* dist\\api\\",
    "electron": "npm run build-electron && electron dist",
    "electron-release": "npm run build-electron && electron-packager dist --platform=win32 --arch=x64 --overwrite --out ..\\",
    "full-publish": "npm run api-publish && npm run electron-release",
    "build-electron-aot": "ng build --prod --base-href ./ && copy src\\electron\\* dist && xcopy /e ..\\dist\\win\\* dist\\api\\",
    "electron-aot": "npm run build-electron-aot && electron dist",
    "electron-release-aot": "npm run build-electron-aot && electron-packager dist --platform=win32 --arch=x64 --overwrite --out ..\\",
    "full-publish-aot": "npm run api-publish && npm run electron-release-aot",
    "s": "electron-packager"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.1",
    "@angular/common": "^5.2.1",
    "@angular/compiler": "^5.2.1",
    "@angular/core": "^5.2.1",
    "@angular/forms": "^5.2.1",
    "@angular/http": "^5.2.1",
    "@angular/platform-browser": "^5.2.1",
    "@angular/platform-browser-dynamic": "^5.2.1",
    "@angular/router": "^5.2.1",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-beta.9",
    "bootstrap": "^4.0.0",
    "core-js": "^2.4.1",
    "ngx-electron": "^1.0.4",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "1.6.2",
    "@angular/compiler-cli": "^5.2.1",
    "@angular/language-service": "^5.2.1",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^6.0.96",
    "codelyzer": "^4.1.0",
    "electron": "^1.8.1",
    "electron-packager": "^10.1.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.3.3",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.7.0",
    "typescript": "~2.4.2"
  }
}
